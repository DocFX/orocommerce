{% block __oro_checkout_content__checkout_button_continue_widget -%}
    {% if transitionData is defined and transitionData %}
        <div class="grid__row grid__row--offset-y">
            <div class="grid__column">
                {{ block_widget(block) }}
            </div>
            <div class="grid__column">
                <div data-role="checkout-require" class="checkout-form__req-text {% if transitionData.isAllowed == false %}hidden{% endif %}"><sup aria-hidden="true">*</sup>
                    {{ 'oro.checkout.workflow.b2b_flow_checkout.form.required.label'|trans }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

